---
import { StatusBubble } from '../components/StatusBubble';
import { ThemeToggle } from '../components/ThemeToggle';
import { BlurFade } from '../components/BlurFade';
import { Button } from '../components/ui/button';
import { Badge } from '../components/ui/badge';

const currentLocale = Astro.currentLocale ?? 'zh-CN';

const t = {
  'zh-CN': {
    title: 'Melora - 个人主页',
    greeting: '你好，我是 Melora',
    subtitle: '开发者 / 创造者 / 梦想家',
    description: '在这里探索我的作品与想法',
    cta: '了解更多',
  },
  en: {
    title: 'Melora - Personal Page',
    greeting: 'Hi, I\'m Melora',
    subtitle: 'Developer / Creator / Dreamer',
    description: 'Explore my works and thoughts here',
    cta: 'Learn More',
  },
};

const content = t[currentLocale as keyof typeof t] ?? t['zh-CN'];
---

<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{content.title}</title>
    <meta name="description" content={content.description} />
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <!-- Theme init script to prevent flash -->
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
    
    <!-- Header -->
    <header class="fixed top-0 z-50 w-full border-b border-border/50 bg-background/80 backdrop-blur-md">
      <div class="container mx-auto flex h-16 items-center justify-between px-4">
        <a href="/" class="text-xl font-bold tracking-tight">
          Melora
        </a>
        <div class="flex items-center gap-4">
          <!-- Status Bubble - fetched on client -->
          <StatusBubble client:load />
          
          <!-- Theme Toggle -->
          <ThemeToggle client:load />
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex min-h-screen items-center justify-center px-4 pt-16">
      <div class="container mx-auto max-w-4xl">
        <!-- Hero Section with BlurFade animations -->
        <div class="flex flex-col items-center text-center space-y-8 py-20">
          
          <!-- Greeting -->
          <BlurFade delay={0} client:load>
            <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl">
              {content.greeting}
            </h1>
          </BlurFade>
          
          <!-- Subtitle with Badges -->
          <BlurFade delay={0.2} client:load>
            <div class="flex flex-wrap items-center justify-center gap-2 text-lg text-muted-foreground sm:text-xl">
              <Badge variant="secondary">开发者</Badge>
              <span>/</span>
              <Badge variant="secondary">创造者</Badge>
              <span>/</span>
              <Badge variant="secondary">梦想家</Badge>
            </div>
          </BlurFade>
          
          <!-- Description -->
          <BlurFade delay={0.4} client:load>
            <p class="max-w-lg text-muted-foreground">
              {content.description}
            </p>
          </BlurFade>
          
          <!-- CTA Button -->
          <BlurFade delay={0.6} client:load>
            <Button asChild>
              <a href="#">{content.cta}</a>
            </Button>
          </BlurFade>
          
          <!-- Decorative Element -->
          <BlurFade delay={0.8} client:load>
            <div class="mt-12 flex items-center gap-4 text-muted-foreground">
              <div class="h-px w-12 bg-border"></div>
              <span class="text-xs uppercase tracking-widest">Built with Astro + React</span>
              <div class=\"h-px w-12 bg-border\"></div>
            </div>
          </BlurFade>
          
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-border py-6">
      <div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
        © {new Date().getFullYear()} Melora. All rights reserved.
      </div>
    </footer>
  </body>
</html>

<script>
  import '../styles/globals.css';
</script>

<script>
  import { ThemeToggle } from '../components/ThemeToggle';
  import { StatusBubble } from '../components/StatusBubble';
  import { BlurFade } from '../components/BlurFade';
  import { Button } from '../components/ui/button';
  import { Badge } from '../components/ui/badge';
</script>
